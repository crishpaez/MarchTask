@model PlayersListModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a class="nav-link text-dark" asp-area="" asp-controller="Player" asp-action="Update" asp-route-id="0">New</a>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.PlayersList)
        {
            <tr>
                <td>@player.Id</td>
                <td>@player.Name</td>
                <td>@player.Description</td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Player" asp-action="Update" asp-route-id="@player.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
